{
  "name": "usite",
  "version": "3.0.0",
  "description": "Tiny static site generator",
  "license": "MIT",
  "author": "Tomas Grubliauskas",
  "type": "module",
  "repository": "git://github.com/v3nom/uSite.git",
  "bugs": {
    "url": "http://github.com/v3nom/uSite/issues"
  },
  "main": "dist/usite.js",
  "bin": {
    "uSite": "./dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint --no-warn-ignored src/**/*.ts",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\""
  },
  "dependencies": {
    "fs-extra": "11.2.0",
    "glob": "10.5.0",
    "highlight.js": "11.9.0",
    "js-yaml": "4.1.0",
    "marked": "12.0.0",
    "marked-highlight": "2.2.3",
    "nunjucks": "3.2.4",
    "speakingurl": "14.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "11.0.4",
    "@types/glob": "8.1.0",
    "@types/jasmine": "5.1.4",
    "@types/js-yaml": "4.0.9",
    "@types/marked": "5.0.2",
    "@types/node": "20.11.19",
    "@types/nunjucks": "3.2.6",
    "@types/speakingurl": "13.0.6",
    "@typescript-eslint/eslint-plugin": "7.0.1",
    "@typescript-eslint/parser": "7.0.1",
    "eslint": "8.56.0",
    "prettier": "3.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.3.3",
    "vitest": "1.2.2"
  },
  "keywords": [
    "static site generator",
    "static website generator",
    "web generator",
    "generator",
    "static website",
    "static",
    "blog",
    "website"
  ]
}